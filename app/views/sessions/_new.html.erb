<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="input-group">
    <span class="input-group-addon"> <i class="fa fa-envelope"></i> </span>
    <%= f.email_field :email, class: 'form-control', placeholder: 'email@example.com', required: true %>
  </div> <!-- form-group// -->
  <div class="input-group">
    <span class="input-group-addon"> <i class="fa fa-lock"></i></span>
    <%= f.password_field :password, class: 'form-control', placeholder: "Password", required: true %>
  </div> <!-- form-group// -->
  <div>
  	<%= f.submit "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>