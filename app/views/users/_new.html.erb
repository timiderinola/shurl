<%= form_with(model: @user, local: true) do |f| %>
	<%= render 'shared/error_messages' %>
	<%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
	<%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
	<%= f.password_field :password, class: "form-control", placeholder: "Create password" %>
	<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat password" %>
	<%= f.submit "Create account", class: "btn btn-primary" %>
<% end %>